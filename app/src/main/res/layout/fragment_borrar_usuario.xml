<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arnauzapata.myapplication.borrarUsuario">

    <EditText
        android:id="@+id/editTextBorrarUsuarioUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="username" />

    <EditText
        android:id="@+id/editTextBorrarUsuarioPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextBorrarUsuarioUsuario"
        android:gravity="center"
        android:hint="old password" />

    <Button
        android:id="@+id/buttonBorrarUsuarioAceptar"
        android:text="Aceptar"
        android:layout_below="@+id/editTextBorrarUsuarioPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonBorrarUsuarioAtras"
        android:text="Atras"
        android:layout_below="@+id/buttonBorrarUsuarioAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
